{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "lib": ["dom", "es6"],
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "allowJs": false,
    "checkJs": false,
    "types": ["node", "mocha"],
    "plugins": [{ "name": "typescript-tslint-plugin" }],
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "exclude": ["node_modules"]
}
